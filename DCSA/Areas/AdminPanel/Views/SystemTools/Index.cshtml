        }

        function DownloadResources() {
            var tag = document.getElementById("updateProgress");
            tag.style.display = 'block';
            window.location = '@Url.Action("DownloadAllResources", "SystemTools")';
            tag.style.display = 'none';

        }
    </script>
}

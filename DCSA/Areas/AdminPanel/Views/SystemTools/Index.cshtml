@{
    ViewBag.Title = "System Tools";
}


<div id="updateProgress" style="position: fixed;display:none; text-align: center; height: 100%; width: 100%; top: 0; right: 0; left: 0; z-index: 9999999; background-color: #000000; opacity: 0.7;">
    <div style="position:relative; top:40%; width:100%; text-align:center;">
        <i class="fa fa-cog fa-spin fa-5x fa-fw"></i>
        <span class="sr-only">Loading...</span>
    </div>
</div>

<div class="card-box">
    <div class="clearfix"></div>
    <div class="wrapper-page">
        <div class=" text-center">

            <h3 class="text-uppercase font-600">System BackUp</h3>
            <p class="text-muted">

            </p>
            <br>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    @Html.ActionLink("Download Database", "DownLoadDatabase", "SystemTools", new { @class = "add lastbtn" })
                </div>
                <div class="col-md-3">
                    @Html.ActionLink("Download All resources", "DownloadAllResources", "SystemTools", new { @class = "add lastbtn" })
                </div>
                <div class="col-md-3"></div>






            </div>


        </div>
    </div>
</div>

@section scripts {

    <script>
           $(document).ready(function(){
                    $("#latest-news-tab-1").addClass('active').parent().siblings().find('a').removeClass('active');
                                                        $("#SystemSettingsTab").addClass('active2').parent().siblings().find('a').removeClass('active2');

        })
        function DownloadDatabase() {


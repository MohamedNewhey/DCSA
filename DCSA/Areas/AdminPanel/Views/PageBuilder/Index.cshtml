@model IEnumerable<NCCM.Database.Page>

@{
	ViewBag.Title = ViewBag.PageTitle;
}

<link href="~/assets/sweetalert/sweetalert.css" rel="stylesheet" />

<div id="updateProgress" style="position: fixed;display:none; text-align: center; height: 100%; width: 100%; top: 0; right: 0; left: 0; z-index: 9999999; background-color: #000000; opacity: 0.7;">
    <div style="position:relative; top:40%; width:100%; text-align:center;">
        <i class="fa fa-cog fa-spin fa-5x fa-fw"></i>
        <span class="sr-only">Loading...</span>
    </div>
</div>
<!-- -----------------button classification----------------- -->
<div class="row mb-5">
	<div class="input-group mb-3 report-button">
		<div class="dropdown">
			<button class="btn btn-outline-secondary  Classification-button" id="SearchButton" type="button" data-bs-toggle="dropdown" aria-expanded="false">

				<img class="Classification-img" src="~/Content/Icons/levels.svg" />
				@ViewBag.SearchValue
				<img class="Classification-icondrop dropdown-toggle" src="~/Content/Icons/Group 82.svg" />
			</button>
            <ul class="dropdown-menu">
                <li onclick="ChangeButtonText(this)"><a class="dropdown-item">تـصنيــــف</a></li>
                <li onclick="ChangeButtonText(this)"><a class="dropdown-item">العنوان</a></li>
                <li onclick="ChangeButtonText(this)"><a class="dropdown-item">الرابط</a></li>
                <li onclick="ChangeButtonText(this)"><a class="dropdown-item">المحتوى</a></li>
            </ul>
		</div>

		
		<input type="text" class="form-control Classification-button" onchange="Search()" value="@ViewBag.Search" id="SearchInput" aria-label="Text input with dropdown button" placeholder="بحــــــث">
	</div>
</div>
<!-- ---------title and refresh----------------- -->
<div class="row">

	<div class="col-md-7">
		<span class="Missing-children-title">@ViewBag.PageTitle</span>
		<span class="title-number">@Model.Count()</span>
	</div>
	<div class="col-md-5 report-icons2">

		@*<button type="button" class="Missing-children-button-refresh"> <img class="Missing-children-icon" src="~/Content/Icons/reload.svg" /> تحديث</button>*@
		@if (ViewBag.ID == null)
		{
			<a class="Missing-children-button" href="@Url.Action("Manage", "PageBuilder")">اضافة</a>
		}
		else
		{
			<a class="Missing-children-button" href="@Url.Action("Manage", "PageBuilder", new { type = ViewBag.ID })">اضافة</a>
		}
		@*<button type="button" class="Missing-children-button-XLS">XLS</button>*@
	</div>

</div>
<hr>
<!--table-->
<div>
	<table style="width: 100%;">
		<thead>
			<tr>
				<th>العنوان</th>

				<th>الرابط</th>

				<th class="text-center">الحالة</th>
				<th>الناشر</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr id="Tr-@item.ID">

					<td>@Html.DisplayFor(modelItem => item.Header)</td>


					<td>  خدمات-الدعم-القانوني-ونفسي/@item.PageType.URL/@item.URL</td>

					@if (item.Publish == true)
					{
						<td class="text-center"><img class="icon-color-table" src="~/Content/Icons/Ellipse 3.svg">نشر</td>
					}
					else
					{
						<td class="text-center"><img class="icon-color-table" src="~/Content/Icons/Ellipse 2.svg">اخفاء من النشر</td>
					}
					<td>@Html.DisplayFor(modelItem => item.User.Name)</td>
					<td class="two-button-color">
						<a class="table-button-show" href="@Url.Action("DisplayPage", "Activities", new {area = "", name = item.PageType.URL, itemurl = item.URL})">عرض</a>
						@if (item.Publish == true)
						{
							<button type="button" class="table-button-off" onclick="Publish('@item.ID', 2)">ايقاف</button>
						}
						else
						{
							<button type="button" class="table-button-Spread" onclick="Publish('@item.ID', 1)">نشر</button>
						}
						@if (ViewBag.ID == null)
						{
							<a class="table-button-edit" href="@Url.Action("Manage", "PageBuilder", new { ID = item.ID })">تعديل</a>
						}
						else
						{
							<a class="table-button-edit" href="@Url.Action("Manage", "PageBuilder", new { ID = item.ID, type = ViewBag.ID })">تعديل</a>
						}
						<button type="button" class="table-button-hide" onclick="Delete('@item.ID')">مسح</button>
					</td>
				</tr>
			}



		</tbody>
	</table>


</div>


@section scripts{
	<script src="~/assets/sweetalert/sweetalert.min.js"></script>

	<script src="~/Scripts/printThis.js"></script>

	<script>
        $(document).ready(function () {
            $("#latest-news-tab-@ViewBag.ID").addClass('active').parent().siblings().find('a').removeClass('active');

        @if(ViewBag.ID == 4)
        {
             @:$("#NewsTab").addClass('active2').parent().siblings().find('a').removeClass('active2');
        }
        else {
                         @:$("#ActivitiesTab").addClass('active2').parent().siblings().find('a').removeClass('active2');

        }

           

        });

       
        function Publish(id, type) {
        if(type == 1){
        swal({
                title: "هل انت متأكد؟",
           text: "هل تريد نشر الصفحة؟",

                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "نعم",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "Post",

                    url: '@Url.Action("Publish", "PageBuilder", new { area = "AdminPanel"})',
                    data: { id: id , type:type},
                    success: function (data) {
                        if (data.IsValid) {


                            swal({
                    title: data.Message,
                    text: "نجاح",
                    type: "success",

                }, function () {
                    window.location.reload();

                });


                        }
                        else {
                            swal("فشل!", data.Message, "Fail");
                        }
                    }
                });

            });
        }
            else{
        swal({
                title: "هل انت متأكد؟",
           text: "هل تريد ايقاف الصفحة؟",

                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "نعم",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "Post",

                    url: '@Url.Action("Publish", "PageBuilder", new { area = "AdminPanel"})',
                    data: { id: id , type:type},
                    success: function (data) {
                        if (data.IsValid) {


                            swal({
                    title: data.Message,
                    text: "نجاح",
                    type: "success",

                }, function () {
                    window.location.reload();

                });


                        }
                        else {
                            swal("فشل!", data.Message, "Fail");
                        }
                    }
                });

            });
        }
        }

        function Delete(id) {

            swal({
                title: "هل انت متأكد؟",
                text: "هل تريد مسح الصفحة؟",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "نعم",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "Post",

                    url: '@Url.Action("DeletePage", "PageBuilder", new { area = "AdminPanel"})',
                    data: { id: id },
                    success: function (data) {
                        if (data.IsValid) {
                            $('#Tr-' + id).remove();

                            swal("نجاح!", data.Message, "success");


                        }
                        else {
                            swal("فشل!", data.Message, "Fail");
                        }
                    }
                });

            });
        }

        function Search() {
            var tag = document.getElementById('updateProgress');
            tag.style.display = 'block';
            var searchValue = document.getElementById("SearchButton").innerText;
            var search = document.getElementById("SearchInput").value;
            
            location.href = '@Url.Action("Index", "PageBuilder")?Type=' + @ViewBag.ID + "&Search=" + search + "&searchValue=" + searchValue;
        }

	</script>
}

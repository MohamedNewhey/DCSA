
@{
	ViewBag.Title = "Detailspage";
	
}



<style>
	.curr {
		color: #4f5152;
		;
		position: absolute;
		left: 20%;
		top: 60%;
	}

	.ahda {
		cursor: pointer;
		user-select: none;
		font-size: 15px;
	}

	.add-number {
		position: relative;
		text-align: center;
	}

	.donation-method .form-control {
		margin: 0 auto;
	}

	.donation-btn {
		border-radius: 19px;
		background: var(--main-Color);
		border: 1px solid #fff;
		width: 90px;
		margin: 30px 0;
		height: 33px;
		font-size: 15px;
		color: var(--white-color);
	}

	.donation-btn-outline {
		border-radius: 19px;
		background: transparent;
		border: 1px solid var(--main-Color);
		width: 90px;
		height: 33px;
		font-size: 13px;
		color: var(--paragraph-color);
	}

	.arrowsControl {
		justify-content: center;
		margin-top: 10px;
	}

	.card-mada {
		margin: 30px 0;
	}
</style>


